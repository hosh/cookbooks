# File automatically generated by Chef. Do not edit.

pid file = /var/run/rsyncd.pid
max connections = <%= @rsyncd[:max_connections] %>
use chroot = yes
uid = <%= @rsyncd[:uid] %>
gid = <%= @rsyncd[:gid] %>

# Optional: restrict access to your Gentoo boxes
# Set these in the site recipes / roles
<% if @rsyncd[:hosts_allow].any? %>
hosts allow = <%= @rsyncd[:hosts_allow] %>
<% else %>
# hosts allow = 192.168.0.1 192.168.0.2 192.168.1.0/24
<% end %>
<% if @rsyncd[:hosts_deny].any? %>
hosts allow = <%= @rsyncd[:hosts_deny] %>
<% else %>
# hosts deny  = *
<% end %>

[gentoo-portage]
path=/usr/portage
comment=Gentoo Portage
exclude=<%= @rsyncd[:exclude].join(' ') %>
